<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="restaurante"
            type="com.leocoesta.zomatorestaurantes.model.Restaurant" />

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/restaurante_item_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="1dp"
        app:cardElevation="@dimen/card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurante_item_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/restaurante_featuredImage"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:ImageUrl="@{restaurante.featuredImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/restaurante_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{restaurante.name}"
                app:layout_constraintTop_toBottomOf="@+id/restaurante_featuredImage"
                tools:layout_editor_absoluteX="-16dp"
                android:textColor="@color/secondaryTextColor"
                style="@style/textview_title" />

            <TextView
                android:id="@+id/restaurante_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{restaurante.location.address}"
                app:layout_constraintTop_toBottomOf="@+id/restaurante_nome"
                tools:layout_editor_absoluteX="-43dp"
                style="@style/textview_subtitle" />

            <TextView
                android:id="@+id/restaurante_cuisines"
                style="@style/textview_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{restaurante.cuisines}"
                app:layout_constraintTop_toBottomOf="@+id/restaurante_endereco"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/restaurante_timings"
                style="@style/textview_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{restaurante.timings}"
                app:layout_constraintTop_toBottomOf="@+id/restaurante_cuisines"
                tools:layout_editor_absoluteX="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>